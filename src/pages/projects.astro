---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";

const projectsPageContent = {
  seo: {
    title: "Projects I'm currently working on",
    description:
      "List of Personal Projects that keep me fresh and interested",
    image: "",
    url: "https://vinitshahdeo.dev/books",
    domain: "vinitshahdeo.dev",
  },
};

const projectCategories = [
  {
    title: "Development Projects",
    description: "Personal Projects that are fun and help keep my skillset up to date",
    icon: "mdi:code-braces",
    projects: [
      {
        title: "Rally Rank",
        subtitle: "Mobile application to Manage small tennis leagues/ladders",
        author: "Eric B",
        description:
          "React Native Application to Manage Small tennis leagues/ladders. Easy to use and available in both the Google Play Store and the Apple App Store",
        url:
          "rally-rank.com",
        completed: true,
      },
      {
        title: "Option AI",
        subtitle: "An Old Guys Journey with FI",
        author: "Eric B",
        description:
          "AI Agent that can identify Put/Credit Spreads. Buidl",
        url:
          "None Yet",
        completed: true,
      },
    ],
  },
  {
    title: "Volunteer Efforts",
    description: "Things I'm volunteering for or working to give back",
    icon: "mdi:server-network",
    projects: [
      {
        title: "The League of Amazing Programmers",
        subtitle: "Teaching, Educating, Tutoring",
        description:
          "Organization that hosts classes in Python, Java, and Robotics",
        url:
          "https://www.jointheleague.org/",
        completed: false,
      },
            {
        title: "Second Half Stack",
        subtitle: "Community Building",
        description:
          "Community",
        url:
          "https://www.jointheleague.org/",
        completed: false,
      }
    ],
  },
];
---

<Layout seo={projectsPageContent.seo}>
  <section class="mt-10 max-w-2xl mx-auto px-6">
    <div class="mb-12">
      <h1 class="text-2xl mb-1">Projects I'm working on</h1>
      <p class="opacity-60 mb-10 subtitle">
        Click on the link to find out more about the project
      </p>
      <p class="text-large opacity-80 mb-6">
        A List of Projects and volunteer efforts that keep me interested an engaged. Also I like to keep my skillset up to date by working on these projects.
      </p>
    </div>

    {
      projectCategories.map((category) => (
        <div class="mb-12">
          <div class="flex items-center gap-3 mb-6">
            <Icon
              name={category.icon}
              width={24}
              height={24}
              class="text-[#ffe895]"
            />
            <div>
              <h2 class="text-[#ffe895] opacity-90">{category.title}</h2>
              <p class="opacity-60 text-small mt-1">{category.description}</p>
            </div>
          </div>

          <div class="grid gap-4">
            {category.projects.map((project) => (
              <div class="group p-6 bg-[#2a2a2a] border border-[#3a3a3a] rounded-lg hover:border-[#00abda] transition-all duration-300 hover:bg-[#2f2f2f]">
                <div class="flex items-start gap-4">
                  <div class="flex-1">
                    <p class="text-small opacity-70 mb-2">
                            {project.title}
                          </p>
                    
                    <p class="opacity-80 text-small leading-relaxed mb-3">
                      {project.description}
                    </p>

                    <div class="flex items-center gap-4">
                      <a
                        href={project.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-2 text-small gradient-link hover:opacity-80 transition-opacity"
                      >
                        <span>View Project</span>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))
    }

    <div class="mt-8 text-center">
      <p class="opacity-60 text-small">
        If you'd like to discuss these projects or talk about what you are working on
        <a
          href="https://www.linkedin.com/in/ericsberryman/"
          class="gradient-link">I'd love to chat about them!</a
        >
      </p>
    </div>
  </section>
</Layout>
